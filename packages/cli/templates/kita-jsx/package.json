{
  "name": "@kitajs/template",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "concurrently --raw --restart-tries 0 \"npm:build:*\"",
    "build:css": "tailwindcss -m -i ./src/styles/index.css -o ./public/tailwind.css",
    "build:server": "kita build && tsc -p tsconfig.build.json",
    "dev": "concurrently --raw --restart-tries 0 \"npm:dev:*\"",
    "dev:css": "tailwindcss -i ./src/styles/index.css -o ./public/tailwind.css --watch",
    "dev:kita": "kita watch",
    "dev:server": "tsx --env-file=.env --enable-source-maps --watch --watch-preserve-output --inspect src/index.ts | pino-pretty",
    "dev:tsc": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:ci": "biome ci .",
    "lint:fix": "biome check --apply-unsafe .",
    "start": "node --env-file=.env --enable-source-maps dist/index.js",
    "test": "kita build && tsx --env-file=.env --env-file=.env.test --enable-source-maps --test test/**/*.test.ts",
    "test:types": "kita build --dry-run && tsc --noEmit"
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.2.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/static": "^7.0.2",
    "@fastify/under-pressure": "^8.3.0",
    "@kitajs/html": "^4.1.0",
    "@kitajs/runtime": "workspace:^",
    "ajv": "^8.13.0",
    "close-with-grace": "^1.3.0",
    "env-schema": "^5.2.1",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "pino": "^9.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@kitajs/cli": "workspace:^",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@kitajs/ts-plugin": "workspace:^",
    "@tailwindcss/typography": "^0.5.12",
    "@types/node": "^20.12.2",
    "concurrently": "^8.2.2",
    "pino-pretty": "^11.0.0",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.11.0",
    "typescript": "~5.4.5"
  },
  "engines": {
    "node": ">=20"
  }
}
