{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useDefaultParameterLast": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsoleLog": "error"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "none"
    }
  },
  "files": {
    "ignore": [
      "dist/**",
      "node_modules/**",
      "coverage/**",
      "packages/generator/test/**/runtime",
      "pnpm-lock.yaml",
      "packages/parser/test/jsdoc/routes/index.ts",
      "packages/cli/test/build"
    ]
  }
}
